BGcolorBody=#9215F2
GlobalFontColor= white
TempBorrders=#eaec67

body
html
	margin:0
	padding:0
	background-color:BGcolorBody
	
#header-container
	border 1px solid TempBorrders

#logo-container
	display inline-block
	// border 1px solid darken(TempBorrders,70%)
	
#reg-form-container
	display inline-block
	margin-left:47%
	padding 1%
	border 1px solid darken(TempBorrders,100%)
	
#main-nav-list

	position relative
	list-style-type none
	border 1px solid darken(TempBorrders,80%)
	li
		display inline-block
		border 1px solid red
		&:hover .sub-nav-list
			width 200px
			display block
			position absolute
		a
			text-decoration none
			color GlobalFontColor
			border 1px solid gray
			
.sub-nav-list
	margin 0
	padding 0
	border 1px solid black
	display none
	